#
# wm inpependent hotkeys
#

alt + Return
    st

alt + d
    dmenu_run

alt + b
    qutebrowser

super + x
    ~/.scripts/util/shutdown

super + e
    ~/.scripts/util/lock -l && playerctl pause

alt + shift + d
    ~/.scripts/util/displayselect

alt + a
    ~/.scripts/util/audio_switch

# Brightness
XF86MonBrightnessUp
    xlight +75 && notify-send -a "BRIGHTNESS" "update"

XF86MonBrightnessDown
    xlight -75 && notify-send -a "BRIGHTNESS" "update"


# Audio
XF86AudioMute
    pulseaudio-ctl mute

XF86AudioLowerVolume
    pulseaudio-ctl down

XF86AudioRaiseVolume
    pulseaudio-ctl up


# Media
control + XF86AudioMute
    playerctl previous

control + XF86AudioLowerVolume
    playerctl play-pause

control + XF86AudioRaiseVolume
    playerctl next


# Web
alt + w
    ~/.scripts/network/bookmarks ~/.scripts/network/.bm

alt + shift + w
    ~/.scripts/network/managebm ~/.scripts/network/.bm


# zathura document viewer
alt + z
    zathura

# htop
super + p
    st -e htop

# time as notification
super + d
    ~/.scripts/util/status

# project quicklaunch
alt + p
    ~/.scripts/util/project_launch

# tagesschau
alt + t
    python ~/.scripts/util/tagesschau.py